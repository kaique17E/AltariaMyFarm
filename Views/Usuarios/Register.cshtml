@model DsiVendas.Models.User

@{
    ViewData["Title"] = "Login";
}

<!-- Container para centralizar o formulário -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center font-weight-bold mb-4">Login</h2>

        <!-- Formulário de login -->
        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label for="UserName" class="form-label">Usuário</label>
                <input asp-for="UserName" class="form-control form-control-lg" placeholder="Digite seu nome de usuário" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <label for="PasswordHash" class="form-label">Senha</label>
                <input asp-for="PasswordHash" type="password" class="form-control form-control-lg" placeholder="Digite sua senha" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <!-- Botão de envio -->
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg w-100">Salvar</button>
            </div>
        </form>
    </div>
</div>

