@model DsiVendas.Models.AreaPlantio

@{
    ViewData["Title"] = "Remover Área de Plantio";
}

<h1>@ViewData["Title"]</h1>

<h4>Tem certeza que deseja remover a área de plantio?</h4>
<hr />

<div>
    <h5>Detalhes da Área de Plantio</h5>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Fazenda</dt>
        <dd class="col-sm-10">@Model.Fazenda.Nome</dd>

        <dt class="col-sm-2">Localização</dt>
        <dd class="col-sm-10">@Model.Localizacao</dd>

        <dt class="col-sm-2">Hectares</dt>
        <dd class="col-sm-10">@Model.Hectares</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
    </dl>
</div>

<form asp-action="Remover" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Confirmar Remoção</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
