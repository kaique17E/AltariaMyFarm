@model IEnumerable<DsiVendas.Models.Funcionario>

<h1 class="my-4">Cadastrar Novo Funcionario</h1>
<p>
    <a asp-action="Criar" class="btn btn-primary">Novo Funcionario</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>E-mail</th>            
            <th>Função</th>
            <th>Salario</th>
            <th>Id Fazenda</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var funcionario in Model)
        {
            <tr>
                <td scope="row">@funcionario.Id</td>
                <td>@funcionario.Nome</td>
                <td>@funcionario.Cpf</td>
                <td>@funcionario.Telefone</td>
                <td>@funcionario.Email</td>
                <td>@funcionario.Funcao</td>
                <td>@funcionario.Salario</td>
                <td>@funcionario.FazendaId</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@funcionario.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Remover" asp-route-id="@funcionario.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
