@model DsiVendas.Models.Funcionario

<p>
<h1 class="my-4">Cadastrar Novo Funcionario</h1>
</p>

<form asp-action="Criar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group w-50">
        <label asp-for="Cpf" class="form-label">CPF</label>
        <input asp-for="Cpf" class="form-control" required />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>

    <div class="form-group w-50">
        <label asp-for="Telefone" class="form-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" required />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group w-50">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group w-50">
        <label asp-for="Funcao" class="form-label">Função</label>
        <input asp-for="Funcao" class="form-control" required />
        <span asp-validation-for="Funcao" class="text-danger"></span>
    </div>

    <div class="form-group w-50">
        <label asp-for="Salario" class="form-label">Salário</label>
        <input asp-for="Salario" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Salario" class="text-danger"></span>
    </div>

    <div class="form-group w-50">
        <label asp-for="Senha" class="form-label">Senha</label>
        <input asp-for="Senha" class="form-control" type="password" required />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
     <div class="form-group w-50 mb-3">
        <label class="control-label">Confirmar senha</label>
        <input id="confirmarSenha" name="confirmarSenha" class="form-control" type="password" required/>
    </div>

    <div class="form-group w-50">
        <label asp-for="FazendaId" class="form-label">Fazenda</label>
        <select asp-for="FazendaId" asp-items="ViewBag.Fazendas" class="form-control" required>
            <option value="">Selecione uma Fazenda</option>
        </select>
        <span asp-validation-for="FazendaId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary mt-2">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Voltar</a>
</form>
