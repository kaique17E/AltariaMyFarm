@model DsiVendas.Models.Fazenda

<h1 class="my-4">Cadastrar nova Fazenda</h1>

<form asp-action="Criar" method="post" class="needs-validation" novalidate>

    <div class="form-group w-50">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required>
    </div>
    <div class="form-group w-50">
        <label class="form-label">Héctares</label>
        <input asp-for="Hectares" class="form-control" required>
    </div>
    <div class="form-group w-50">
        <label class="form-label">Endereço</label>
        <input asp-for="Endereco" class="form-control" required>
    </div>
    <div class="form-group w-50">
        <label class="form-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" required>
    </div>
     <div class="form-group w-50">
        <label class="form-label">E-mail</label>
        <input asp-for="Email" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Voltar</a>
</form>