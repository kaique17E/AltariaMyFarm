@model IEnumerable<DsiVendas.Models.Fornecedor>

<h1>Lista de Fornecedores</h1>

<p>
  <a asp-action="Criar" class="btn btn-primary">Novo Fornecedor</a>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">CNPJ</th>
      <th scope="col">Nome</th>
      <th scope="col">Cidade</th>
      <th scope="col">Telefone</th>
      <th scope="col">Ações</th>

    </tr>
  </thead>
  <tbody>
    @foreach (var fornecedor in Model)
    {
      <tr>
        <td scope="row">@fornecedor.Id</td>
        <td>@fornecedor.CNPJ</td>
        <td>@fornecedor.Nome</td>
        <td>@fornecedor.Cidade</td>
        <td>@fornecedor.Telefone</td>
        <td>
           <a asp-action="Editar" asp-route-id="@fornecedor.Id" class="btn btn-warning">Editar</a> |
          <form asp-action="Excluir" asp-route-id="@fornecedor.Id" method="post" style="display:inline;">
            <button type="submit" onclick="return confirm('Tem certeza que deseja excluir?')" class="btn btn-danger">Excluir</button>
          </form>
        </td>
      </tr>
    }
  </tbody>
</table>