<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AltariaMyFarm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DsiVendas.styles.css" asp-append-version="true" />
    <style>
        /* Garantir que a página ocupe a altura inteira da tela */
        html, body {
            height: 100%;  /* altura total da página */
            margin: 0; /* Remover margens padrões */
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1; /* Ocupa todo o espaço disponível */
        }

        footer {
            background-color: #f8f9fa;
            text-align: left;
            padding: 10px 0;
            border-top: 1px solid #e9ecef;
        }

        footer p {
            margin: 0;
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>

<body>
    @if (ViewData["HideLayout"] as bool? != true)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AltariaMyFarm</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @{
                                var usuarioId = Context.Session.GetString("UsuarioId");
                            }
                            <!-- Exibir apenas os itens do menu se o usuário estiver autenticado -->
                            @if (!string.IsNullOrEmpty(usuarioId))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Fornecedores" asp-action="Index">Fornecedores</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Vendas" asp-action="Index">Vendas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="AreaPlantios" asp-action="Index">Áreas de Plantio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Plantios" asp-action="Index">Plantios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Fazendas" asp-action="Index">Fazendas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Recursos" asp-action="Index">Recursos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Compras" asp-action="Index">Compras</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Funcionarios" asp-action="Index">Funcionários</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link bg-danger text-white logout-link" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link bg-success text-white login-link" asp-controller="Usuarios" asp-action="Register">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Rodapé -->
    <footer>
        <p>&copy; 2024 AltariaMyFarm. Todos os direitos reservados.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
