@model IEnumerable<DsiVendas.Models.Recurso>

<h1>Listagem de Recursos</h1>

<p>
    <a asp-action="Criar" class="btn btn-primary">Novo Recurso</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Tipo de Recurso</th>
            <th scope="col">Preço</th>
            <th scope="col">Quantidade</th>
            <th scope="col">NumeroSerie</th>
            <th scope="col">Data da Aquisição</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recurso in Model)
        {
            <tr>
                <td scope="row">@recurso.Id</td>
                <td>@recurso.Nome</td>
                <td>@recurso.Tipo</td> 
                <td>@recurso.Preco.ToString("C")</td>
                <td>@recurso.Quantidade</td>
                 <td>@recurso.NumeroSerie</td>
                <td>@recurso.DataAquisicao</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@recurso.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Excluir" asp-route-id="@recurso.Id" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" onclick="return confirm('Tem certeza que deseja excluir?')" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
