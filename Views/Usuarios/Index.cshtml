@model IEnumerable<DsiVendas.Models.User>

<h2>Lista de Usuários</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>
                    <!-- Botões de Ações -->
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este usuário?');">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Register" class="btn btn-primary">Adicionar Novo Usuário</a>
